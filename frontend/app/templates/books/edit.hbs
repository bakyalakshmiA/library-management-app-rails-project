{{page-title "Edit"}}
<div class="container bg-light border p-4 w-50" >
  <h2 class="border-bottom mb-3"> Edit Book </h2>
  <form {{on "submit" this.updateBook}} >
  <div class="form-row">
    <div class="form-group mb-3">
      <label for="inputBookTitle">Book Title</label>
      <Input type="text" class="form-control" id="inputBookTitle" placeholder="Enter Book Title" @value={{this.bookTitle}}></Input>
    </div>
    <div class="form-group  mb-3">
      <label for="inputAuthor">Author</label>
      <Input type="text" class="form-control" id="inputAuthor" placeholder="Enter Author"  @value={{this.author}}></Input>
    </div>
    <div class="form-group mb-3 ">
      <label for="inputLanguage">Language</label>
      <Input type="text" class="form-control" id="inputLanguage" placeholder="Enter Language" @value={{this.language}}></Input>
    </div>
    <div class="form-group mb-3 ">
      <label for="inputISBN">ISBN</label>
      <Input type="text" class="form-control" id="inputISBN" placeholder="Enter ISBN" @value={{this.isbn}}></Input>
    </div>
    <div class="form-group mb-3 ">
      <label for="inputQuantity">Quantity</label>
      <Input type="number" min=0 class="form-control" id="inputQuantity" placeholder="Enter Quantity" @value={{this.quantity}}></Input>
    </div>
  </div>
  <button type="submit" class="btn btn-dark"> Update </button>
  </form>
</div>
{{outlet}}